<AnchorPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="500.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="dnd.gui.StartMenuController">
    <children>
      <Label layoutX="44.0" layoutY="40.0" text="Create or Load a Character">
         <font>
            <Font name="Segoe UI" size="35.0" />
